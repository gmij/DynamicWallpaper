<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <StartupObject>DynamicWallpaper.Program</StartupObject>
  </PropertyGroup>


  <ItemGroup>
    <Compile Remove="DynamicWallpaper.LocalServices\**" />
    <Compile Remove="libs\**" />
    <EmbeddedResource Remove="DynamicWallpaper.LocalServices\**" />
    <EmbeddedResource Remove="libs\**" />
    <None Remove="DynamicWallpaper.LocalServices\**" />
    <None Remove="libs\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ico\exit.ico" />
    <None Remove="ico\refresh.ico" />
    <None Remove="ico\screen.ico" />
    <None Remove="ico\setting.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="ico\exit.ico" />
    <EmbeddedResource Include="ico\refresh.ico" />
    <EmbeddedResource Include="ico\screen.ico" />
    <EmbeddedResource Include="ico\setting.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="NLog.Extensions.Logging" Version="5.2.3" />
    <PackageReference Include="System.Management" Version="7.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="idw">
      <HintPath>libs\idw.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>